        </Grid>



        <Button x:Name="QuickSearch" Content="切换至快速日记搜索" HorizontalAlignment="Stretch" Grid.Row="5" VerticalAlignment="Stretch" Grid.ColumnSpan="10" FontSize="36" Click="QuickSearch_Click" Background="{x:Null}" Margin="0,50,0,0" RequestedTheme="Dark"/>
    </Grid>
</Page>
