        </Grid>

        <Grid Name="from_search_day" Grid.Column="7" Grid.Row="2" Grid.ColumnSpan="2" >

            <ComboBox x:Name="filterDay1" FontSize="36" HorizontalAlignment="Left" VerticalAlignment="Top" 
                  Height="120" Width="256" Margin="0,10">
