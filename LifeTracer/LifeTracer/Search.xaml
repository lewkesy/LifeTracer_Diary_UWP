                <x:Int32>29</x:Int32>
                <x:Int32>30</x:Int32>
                <x:Int32>31</x:Int32>
            </ComboBox>


        </Grid>


        <Grid Name="to_search_year" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" >

            <ComboBox x:Name="filterYear2" FontSize="36" HorizontalAlignment="Left" VerticalAlignment="Top" 
            Width="256" Height="120" Margin="0,10">
                <x:String>不限</x:String>
                <x:Int32>2016</x:Int32>
                <x:Int32>2017</x:Int32>
                <x:Int32>2018</x:Int32>
                <x:Int32>2019</x:Int32>
                <x:Int32>2020</x:Int32>
            </ComboBox>

        </Grid>

        <Grid Name="to_search_month" Grid.Column="4" Grid.Row="3" Grid.ColumnSpan="2" >

            <ComboBox x:Name="filterMonth2" FontSize="36" HorizontalAlignment="Left" VerticalAlignment="Top" 
            Height="120" Width="256" Margin="0,10">
