<Page
    x:Class="LifeTracer.UserWelcome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LifeTracer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid x:ConnectionId='1' Name="bg" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
            <Grid.Background>
                <ImageBrush ImageSource="Assets/UserWelcomeBG.png"/>
            </Grid.Background>
        </Grid>
        <CalendarView HorizontalAlignment="Stretch" Margin="30,20,20,20" VerticalAlignment="Stretch" Background="{x:Null}" OutOfScopeBackground="{x:Null}" CalendarItemBackground="#FFD3C1C1" Opacity="0.61" RequestedTheme="Dark" CalendarItemForeground="#FF6C4099" FocusBorderBrush="White" Foreground="#CCFFFFFF" HoverBorderBrush="#66FFFFFF" OutOfScopeForeground="White" PressedBorderBrush="#99FFFFFF" PressedForeground="White" SelectedForeground="White" SelectedBorderBrush="#FF4288BF" Grid.Column="1"/>
        <TextBlock x:ConnectionId='2' Name="cal" Margin="10,109,65,0" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36"
                    Foreground="#FF10104F" Width="413" />
        <TextBlock x:ConnectionId='3' x:Name="tips"  HorizontalAlignment="Left" Margin="10,400,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF2939DA" FontSize="36"/>
    </Grid>
</Page>

