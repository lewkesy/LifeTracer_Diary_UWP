<UserControl
    x:Class="LifeTracer.tagChoose"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LifeTracer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="400" Height="451">

    <Grid Height="451" VerticalAlignment="Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="86*"/>
            <RowDefinition Height="138*"/>
            <RowDefinition Height="227*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Please input the tag:" FontSize="36" Margin="38,24,38,14" Height="48" VerticalAlignment="Center"/>
        <TextBox x:ConnectionId='1' Name="tagInput" FontSize="36" Grid.Row="1" Height="60" Margin="10,0"                                    VerticalAlignment="Center"/>
        <ListBox x:ConnectionId='2' Name="RecentTag" Grid.Row="2"                                              >
            <ListBoxItem x:ConnectionId='3' Name="tag1" Content="没有最近添加的tag"/>
            <ListBoxItem x:ConnectionId='4' Name="tag2" Content=" "/>
            <ListBoxItem x:ConnectionId='5' Name="tag3" Content=" "/>
            <ListBoxItem x:ConnectionId='6' Name="tag4" Content=" "/>
            <ListBoxItem x:ConnectionId='7' Name="tag5" Content=" "/>
        </ListBox>
    </Grid>
</UserControl>

